<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.devstack.pos.controller.BarcodeViewerController"
            prefWidth="500.0" prefHeight="450.0" style="-fx-background-color: #f8f9fa;">
   <children>
      <VBox spacing="20" style="-fx-padding: 24;" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" 
            AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
         
         <!-- Header -->
         <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-background-color: #2c3e50; -fx-padding: 16; -fx-background-radius: 8;">
            <Text text="Product Barcode" style="-fx-fill: white; -fx-font-weight: bold; -fx-font-size: 20px;"/>
            <Region HBox.hgrow="ALWAYS" />
            <JFXButton fx:id="btnClose" onAction="#btnCloseOnAction" text="✕ Close" 
                       style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-padding: 8 16;">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </JFXButton>
         </HBox>
         
         <!-- Product Info -->
         <VBox spacing="12" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <HBox spacing="12" alignment="CENTER_LEFT">
               <VBox spacing="8" prefWidth="150.0">
                  <Text text="Product Code" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-fill: #34495e;"/>
                  <TextField fx:id="txtProductCode" editable="false" style="-fx-font-size: 14px;"/>
               </VBox>
               <VBox spacing="8" HBox.hgrow="ALWAYS">
                  <Text text="Description" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-fill: #34495e;"/>
                  <TextArea fx:id="txtDescription" editable="false" prefHeight="60.0" wrapText="true" style="-fx-font-size: 14px;"/>
               </VBox>
            </HBox>
            
            <VBox spacing="8">
               <Text text="Barcode" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-fill: #34495e;"/>
               <TextField fx:id="txtBarcode" editable="false" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            </VBox>
         </VBox>
         
         <!-- Barcode Image -->
         <VBox spacing="12" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" VBox.vgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT" spacing="12">
               <Text text="Barcode Image" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>
               <Region HBox.hgrow="ALWAYS" />
            </HBox>
            
            <VBox alignment="CENTER" spacing="16" style="-fx-padding: 20; -fx-background-color: #f8fafc; -fx-background-radius: 8;" VBox.vgrow="ALWAYS">
               <ImageView fx:id="imgBarcode" fitWidth="400.0" fitHeight="200.0" preserveRatio="true" 
                          style="-fx-background-color: white; -fx-border-color: #e2e8f0; -fx-border-width: 2px; -fx-border-radius: 4px;"/>
            </VBox>
            
            <HBox spacing="12" alignment="CENTER">
               <JFXButton fx:id="btnDownload" onAction="#btnDownloadOnAction" text="⬇ Download Barcode" 
                          prefWidth="200.0" prefHeight="44.0"
                          style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;">
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
               </JFXButton>
            </HBox>
         </VBox>
      </VBox>
   </children>
</AnchorPane>

