<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox fx:id="context" alignment="CENTER" xmlns="http://javafx.com/javafx/20.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.devstack.pos.controller.LoginFormController"
      stylesheets="@styles/pos-styles.css" styleClass="login-container"
      style="-fx-background-color: #f5f5f5;">
    <children>
        <VBox alignment="CENTER" spacing="32" styleClass="login-card" style="-fx-padding: 48; -fx-background-color: white; -fx-background-radius: 12;">
            <!-- Header Section -->
            <VBox alignment="CENTER" spacing="8">
                <Text text="Kumara Enterprises" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-fill: #1e293b;">
                    <font>
                        <Font name="System Bold" size="32.0"/>
                    </font>
                </Text>
                <Text text="POS System - Login to continue" style="-fx-font-size: 14px; -fx-fill: #64748b;">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Text>
            </VBox>

            <!-- Login Form -->
            <VBox spacing="20" prefWidth="350.0">
                <VBox spacing="8">
                    <Text text="Email" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-fill: #1e293b;">
                        <font>
                            <Font name="System Bold" size="13.0"/>
                        </font>
                    </Text>
                    <JFXTextField fx:id="txtEmail" promptText="Enter email address" styleClass="text-field-modern"
                                  text="" prefWidth="350.0" prefHeight="42.0" onAction="#txtEmailOnAction">
                        <font>
                            <Font name="System" size="14.0"/>
                        </font>
                    </JFXTextField>
                </VBox>

                <VBox spacing="8">
                    <Text text="Password" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-fill: #1e293b;">
                        <font>
                            <Font name="System Bold" size="13.0"/>
                        </font>
                    </Text>
                    <StackPane prefWidth="350.0" prefHeight="42.0">
                        <JFXPasswordField fx:id="txtPassword" promptText="Enter password"
                                          styleClass="text-field-modern" text="" prefWidth="350.0" prefHeight="42.0" onAction="#txtPasswordOnAction">
                            <font>
                                <Font name="System" size="14.0"/>
                            </font>
                        </JFXPasswordField>
                        <JFXTextField fx:id="txtPasswordVisible" promptText="Enter password"
                                      styleClass="text-field-modern" text="" prefWidth="350.0" prefHeight="42.0" 
                                      onAction="#txtPasswordOnAction" visible="false" managed="false">
                            <font>
                                <Font name="System" size="14.0"/>
                            </font>
                        </JFXTextField>
                        <HBox alignment="CENTER_RIGHT" spacing="0" style="-fx-padding: 0 12 0 0;" maxWidth="350.0" prefWidth="350.0">
                            <Region HBox.hgrow="ALWAYS"/>
                            <JFXButton fx:id="btnTogglePassword" onAction="#btnTogglePasswordOnAction" 
                                      buttonType="FLAT" style="-fx-background-color: transparent; -fx-padding: 8; -fx-min-width: 36; -fx-min-height: 36; -fx-cursor: hand;">
                                <graphic>
                                    <FontAwesomeIconView fx:id="iconTogglePassword" glyphName="EYE" size="16" style="-fx-fill: #64748b;"/>
                                </graphic>
                            </JFXButton>
                        </HBox>
                    </StackPane>
                </VBox>
            </VBox>

            <!-- Login Button -->
            <VBox spacing="16" alignment="CENTER" style="-fx-padding: 8 0 0 0;">
                <JFXButton onAction="#btnSignInOnAction" text="Login" buttonType="RAISED" styleClass="btn-primary"
                           prefWidth="350.0" prefHeight="44.0" style="-fx-font-size: 15px; -fx-font-weight: bold;">
                    <font>
                        <Font name="System Bold" size="15.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </JFXButton>
            </VBox>

            <!-- Footer -->
            <VBox alignment="CENTER" style="-fx-padding: 24 0 0 0;">
                <Text text="Developed by GreenCodeSolutions" style="-fx-font-size: 11px; -fx-fill: #94a3b8;">
                    <font>
                        <Font size="11.0"/>
                    </font>
                </Text>
            </VBox>
        </VBox>
    </children>
</VBox>
