<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXRadioButton?>
<?import com.jfoenix.controls.JFXToggleGroup?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="context" styleClass="background-modern" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.devstack.pos.controller.PlaceOrderFormController" stylesheets="@styles/pos-styles.css">
   <children>
      <!-- Header Bar -->
      <VBox styleClass="header-bar" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="12">
               <Text styleClass="header-title" text="Place Order">
                  <font>
                     <Font name="System Bold" size="24.0" />
                  </font>
               </Text>
               <Region HBox.hgrow="ALWAYS" />
               <HBox spacing="12" alignment="CENTER_RIGHT">
                  <JFXButton onAction="#btnAddNewProductOnAction" text="+ New Product" buttonType="RAISED" styleClass="btn-outline" prefWidth="140.0">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </JFXButton>
                  <JFXButton onAction="#btnAddNewCustomerOnAction" text="+ New Customer" buttonType="RAISED" styleClass="btn-primary" prefWidth="140.0">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </JFXButton>
                  <JFXButton onAction="#btnBackToHomeOnAction" text="Back to Home" buttonType="RAISED" styleClass="btn-secondary" prefWidth="140.0">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </JFXButton>
               </HBox>
            </HBox>
         </children>
      </VBox>
      
      <!-- Main Content -->
      <ScrollPane fitToWidth="true" AnchorPane.topAnchor="72" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" style="-fx-background: transparent; -fx-border-width: 0;">
         <VBox spacing="24" style="-fx-padding: 32;">
            <!-- Mode Selection -->
            <VBox styleClass="form-section" spacing="16">
               <Text text="Order Mode" styleClass="label-section">
                  <font>
                     <Font name="System Bold" size="18.0" />
                  </font>
               </Text>
               <HBox spacing="16" alignment="CENTER_LEFT">
                  <JFXRadioButton fx:id="radioManual" text="Manual Mode" selected="true" toggleGroup="$model" style="-fx-font-size: 14px;">
                     <font>
                        <Font name="System" size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </JFXRadioButton>
                  <JFXRadioButton text="Auto Mode" toggleGroup="$model" style="-fx-font-size: 14px;">
                     <font>
                        <Font name="System" size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </JFXRadioButton>
               </HBox>
            </VBox>
            
            <!-- Customer Details Section -->
            <VBox styleClass="form-section" spacing="16">
               <Text text="Customer Information" styleClass="label-section">
                  <font>
                     <Font name="System Bold" size="18.0" />
                  </font>
               </Text>
               <GridPane hgap="16" vgap="16">
                  <columnConstraints>
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="220.0" />
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="220.0" />
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="220.0" />
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="220.0" />
                  </columnConstraints>
                  
                  <JFXTextField fx:id="txtEmail" promptText="Email" styleClass="text-field-modern" onAction="#searchCustomer" GridPane.columnIndex="0" prefWidth="220.0">
                     <font>
                        <Font name="System" size="14.0" />
                     </font>
                  </JFXTextField>
                  <JFXTextField fx:id="txtName" editable="false" promptText="Name" styleClass="text-field-modern" GridPane.columnIndex="1" prefWidth="220.0">
                     <font>
                        <Font name="System" size="14.0" />
                     </font>
                  </JFXTextField>
                  <JFXTextField fx:id="txtContact" editable="false" promptText="Contact" styleClass="text-field-modern" GridPane.columnIndex="2" prefWidth="220.0">
                     <font>
                        <Font name="System" size="14.0" />
                     </font>
                  </JFXTextField>
                  <JFXTextField fx:id="txtSalary" editable="false" promptText="Salary" styleClass="text-field-modern" GridPane.columnIndex="3" prefWidth="220.0">
                     <font>
                        <Font name="System" size="14.0" />
                     </font>
                  </JFXTextField>
               </GridPane>
               <HBox spacing="12" alignment="CENTER_LEFT">
                  <Hyperlink fx:id="urlNewLoyalty" onAction="#newLoyaltyOnAction" text="Show Loyalty Card Information" underline="true" visible="false" style="-fx-font-size: 14px; -fx-text-fill: #2563eb;">
                     <font>
                        <Font name="System" size="14.0" />
                     </font>
                  </Hyperlink>
                  <Label fx:id="lblLoyaltyType" text="(GOLD Member)" visible="false" style="-fx-font-size: 14px; -fx-text-fill: #10b981; -fx-font-weight: bold;">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
               </HBox>
            </VBox>
            
            <!-- Product Details Section -->
            <VBox styleClass="form-section" spacing="16">
               <Text text="Product Information" styleClass="label-section">
                  <font>
                     <Font name="System Bold" size="18.0" />
                  </font>
               </Text>
               <HBox spacing="16" alignment="CENTER_LEFT">
                  <VBox spacing="8" HBox.hgrow="ALWAYS">
                     <Text text="Scan or Enter Barcode" styleClass="form-label">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Text>
                     <JFXTextField fx:id="txtBarcode" promptText="Enter barcode" styleClass="text-field-modern" onAction="#loadProduct" prefWidth="300.0">
                        <font>
                           <Font name="System" size="14.0" />
                        </font>
                     </JFXTextField>
                  </VBox>
                  <VBox spacing="8" HBox.hgrow="ALWAYS">
                     <Text text="Discount Available" styleClass="form-label">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Text>
                     <Label fx:id="lblDiscountAvl" text="Discount Available" visible="false" style="-fx-text-fill: #10b981; -fx-font-size: 14px; -fx-font-weight: bold;">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Label>
                  </VBox>
               </HBox>
               
               <GridPane hgap="12" vgap="12">
                  <columnConstraints>
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="140.0" prefWidth="160.0" />
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="140.0" prefWidth="160.0" />
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="140.0" prefWidth="160.0" />
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="140.0" prefWidth="160.0" />
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="140.0" prefWidth="160.0" />
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="140.0" prefWidth="160.0" />
                  </columnConstraints>
                  
                  <JFXTextField fx:id="txtDescription" editable="false" promptText="Description" styleClass="text-field-modern" GridPane.columnIndex="0" GridPane.columnSpan="2">
                     <font>
                        <Font name="System" size="14.0" />
                     </font>
                  </JFXTextField>
                  <JFXTextField fx:id="txtSellingPrice" editable="false" promptText="Selling Price" styleClass="text-field-modern" GridPane.columnIndex="2">
                     <font>
                        <Font name="System" size="14.0" />
                     </font>
                  </JFXTextField>
                  <JFXTextField fx:id="txtDiscount" editable="false" promptText="Discount" styleClass="text-field-modern" GridPane.columnIndex="3">
                     <font>
                        <Font name="System" size="14.0" />
                     </font>
                  </JFXTextField>
                  <JFXTextField fx:id="txtShowPrice" editable="false" promptText="Show Price" styleClass="text-field-modern" GridPane.columnIndex="4">
                     <font>
                        <Font name="System" size="14.0" />
                     </font>
                  </JFXTextField>
                  <JFXTextField fx:id="txtQtyOnHand" editable="false" promptText="Qty On Hand" styleClass="text-field-modern" GridPane.columnIndex="5">
                     <font>
                        <Font name="System" size="14.0" />
                     </font>
                  </JFXTextField>
                  
                  <JFXTextField fx:id="txtBuyingPrice" editable="false" promptText="Buying Price" styleClass="text-field-modern" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="5">
                     <font>
                        <Font name="System" size="14.0" />
                     </font>
                  </JFXTextField>
                  <JFXTextField fx:id="txtQty" promptText="Quantity" styleClass="text-field-modern" onAction="#addToCart" GridPane.rowIndex="1" GridPane.columnIndex="5">
                     <font>
                        <Font name="System" size="14.0" />
                     </font>
                  </JFXTextField>
               </GridPane>
            </VBox>
            
            <!-- Cart Section -->
            <VBox spacing="16">
               <HBox alignment="CENTER_LEFT" spacing="12">
                  <Text text="Shopping Cart" styleClass="label-section">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Text>
                  <Region HBox.hgrow="ALWAYS" />
               </HBox>
               
               <TableView fx:id="tblCart" styleClass="table-view-modern" prefHeight="300.0">
                  <columns>
                     <TableColumn fx:id="colCode" prefWidth="100.0" text="Code">
                        <font>
                           <Font name="System Bold" size="13.0" />
                        </font>
                     </TableColumn>
                     <TableColumn fx:id="colDesc" prefWidth="250.0" text="Description">
                        <font>
                           <Font name="System Bold" size="13.0" />
                        </font>
                     </TableColumn>
                     <TableColumn fx:id="colSelPrice" prefWidth="120.0" text="Selling Price">
                        <font>
                           <Font name="System Bold" size="13.0" />
                        </font>
                     </TableColumn>
                     <TableColumn fx:id="colSelDisc" prefWidth="100.0" text="Discount">
                        <font>
                           <Font name="System Bold" size="13.0" />
                        </font>
                     </TableColumn>
                     <TableColumn fx:id="colSelShPrice" prefWidth="100.0" text="Show Price">
                        <font>
                           <Font name="System Bold" size="13.0" />
                        </font>
                     </TableColumn>
                     <TableColumn fx:id="colSelQty" prefWidth="80.0" text="QTY">
                        <font>
                           <Font name="System Bold" size="13.0" />
                        </font>
                     </TableColumn>
                     <TableColumn fx:id="colSelTotal" prefWidth="120.0" text="Total Cost">
                        <font>
                           <Font name="System Bold" size="13.0" />
                        </font>
                     </TableColumn>
                     <TableColumn fx:id="colSelOperation" prefWidth="150.0" text="Actions">
                        <font>
                           <Font name="System Bold" size="13.0" />
                        </font>
                     </TableColumn>
                  </columns>
               </TableView>
               
               <!-- Total and Complete Order -->
               <HBox alignment="CENTER_RIGHT" spacing="24" style="-fx-padding: 16 0;">
                  <VBox alignment="CENTER_RIGHT" spacing="8">
                     <Text text="Total Cost:" style="-fx-font-size: 18px; -fx-fill: #64748b;">
                        <font>
                           <Font name="System" size="18.0" />
                        </font>
                     </Text>
                     <Text fx:id="txtTotal" text="0.00 /=" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-fill: #2563eb;">
                        <font>
                           <Font name="System Bold" size="32.0" />
                        </font>
                     </Text>
                  </VBox>
                  <JFXButton onAction="#btnCompleteOrder" text="Complete Order" buttonType="RAISED" styleClass="btn-success" prefWidth="200.0" prefHeight="56.0" style="-fx-font-size: 18px; -fx-font-weight: bold;">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </JFXButton>
               </HBox>
            </VBox>
         </VBox>
      </ScrollPane>
   </children>
</AnchorPane>
