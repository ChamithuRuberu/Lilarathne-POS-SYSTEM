<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox fx:id="context" alignment="CENTER" xmlns="http://javafx.com/javafx/20.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.devstack.pos.controller.LoginFormController"
      stylesheets="@styles/pos-styles.css" styleClass="login-container"
      style="-fx-background-color: #f8fafc;">
    <children>
        <VBox alignment="CENTER" styleClass="login-card">
            <VBox alignment="CENTER_LEFT" spacing="16">
                <Text styleClass="login-title" text="Welcome Back">
                    <font>
                        <Font name="System Bold" size="36.0"/>
                    </font>
                </Text>
                <Text styleClass="login-subtitle" text="Sign in to continue to POS System">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Text>
            </VBox>

            <VBox spacing="20" style="-fx-padding: 0;">
                <VBox spacing="8">
                    <Text text="Email" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-fill: #1e293b;">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Text>
                    <JFXTextField fx:id="txtEmail" promptText="Enter your email" styleClass="text-field-modern"
                                  text="tcdrubeu@gmail.com" prefWidth="320.0" prefHeight="44.0">
                        <font>
                            <Font name="System" size="14.0"/>
                        </font>
                    </JFXTextField>
                </VBox>

                <VBox spacing="8">
                    <Text text="Password" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-fill: #1e293b;">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Text>
                    <JFXPasswordField fx:id="txtPassword" promptText="Enter your password"
                                      styleClass="text-field-modern" text="ADMIN" prefWidth="320.0" prefHeight="44.0">
                        <font>
                            <Font name="System" size="14.0"/>
                        </font>
                    </JFXPasswordField>
                </VBox>
            </VBox>

            <VBox spacing="16" style="-fx-padding: 32 0 24 0;" alignment="CENTER">
                <JFXButton onAction="#btnSignInOnAction" text="Sign In" buttonType="RAISED" styleClass="btn-primary"
                           prefWidth="320.0" prefHeight="48.0" style="-fx-font-size: 16px; -fx-font-weight: bold;">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </JFXButton>

                <HBox alignment="CENTER" spacing="12" style="-fx-padding: 24 0;">
                    <Separator prefWidth="120.0"/>
                    <Text style="-fx-font-size: 12px; -fx-fill: #94a3b8;">
                        <font>
                            <Font size="12.0"/>
                        </font>
                    </Text>
                    <Separator prefWidth="120.0"/>
                </HBox>

            </VBox>
        </VBox>
    </children>
</VBox>
